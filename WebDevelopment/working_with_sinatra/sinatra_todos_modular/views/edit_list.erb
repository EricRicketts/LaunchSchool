<form action="/lists/<%= id %>" method="post" accept-charset="utf-8">
  <dl>
    <dt>
      <label for="list_name">Edit the name of your list:</label>
    </dt>
    <dd>
      <input type="text" name="list_name" placeholder="List Name" value="<%= list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists">Cancel</a>
  </fieldset>
</form>