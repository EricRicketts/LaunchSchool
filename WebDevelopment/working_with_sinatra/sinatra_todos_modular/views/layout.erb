<!doctype html>
<html lang="en-US">
  <head>
    <title>Todo App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
    <script src="/javascripts/jquery-3.3.1.js" type="text/javascript" charset="utf-8"></script>
  </head>
  <body>
    <header>
      <h1>Todo Tracker</h1>
      <div class="actions">
        <%== yield_content :header_links %>
      </div>
    </header>

    <% unless key == :none %>
      <% if session[key] %>
      <div class="flash <%= key.to_s %>">
        <p><%= session.delete(key) %></p>
      </div>
      <% end %>
    <% end %>

    <main>
      <%== yield %>
    </main>
    <!-- <script src="/javascripts/application.js" type="text/javascript" charset="utf-8"></script> -->
  </body>
</html>
